 @import 'blog.styl';

color_blue = #14204d;
color_blue_light = #3cc8f4;
color_red = #eb5422;
color_grey = #d1d2d4;

body
	// padding-top: 90px;
@media screen and (min-width: 990px)
	.header-dark header.site-header h1.navbar-brand a 
		background-image: url("https://auth0.com/auth0-styleguide/img/logo-grey-horizontal.png");


p,li
	color: #4d4d4d;

h1, h2,h3,h4,h5, pre
	margin-top: 20px;
	margin-bottom: 20px;
i
	// display: none

h1
	margin-top: 0;

p,li
	color: #4d4d4d;

.try-code
	a.btn
		margin-top: 0;
		background: color_blue_light;
		i
			position: relative;
			top: 3px;
			margin-right: 10px;
		&:hover
			background: darken(color_blue_light, 30%);

header.site-header
	// background: rgba(255,255,255,.9);

.navbar-fixed-top
	padding: inherit;

h1,h2,h3,h4,h5
	color: black

.entry-title
	font-weight: 300

#container.container
	max-width: 700px;

ul.archive
	margin: 0;
	padding: 0;
	li.post
		list-style: none;
		padding-bottom: 60px;
		margin-bottom: 60px;
		border-bottom: 1px solid #f1f1f1;
		.entry-content
			img
				display: none !important

.entry-title
	position: relative;

.author
	img
		border-radius: 100px;
		position: absolute;
		left: -80px
		top: 4px;
		width: 56px;
		height: 56px;

.entry-meta
	font-size: 12px;
	text-transform: uppercase
	color: #999;
	margin: 20px 0;
	a
		color: #666;

.entry-content
	font-size: 18px;
	color: #4d4d4d;
	line-height: 160%;

	img
		max-width: 100%;
		height: auto;
.sharing-buttons
	margin-top: 40px;

.readmore
	text-transform: uppercase
	font-weight: bold
	margin-top: 30px;
	display: inline-block
	font-size: 16px
	letter-spacing: 1px;

.blog-single

	.entry-meta
		margin-bottom: 40px

.navigation
	overflow: hidden
	margin-bottom: 50px;
	.nav-previous, .nav-next
		width: 50%;
		display: inline-block
		a
			font-weight: bold
			margin-bottom: 100px;
	.nav-next
		display: inline-block
		text-align: right
		float: right


pre.prettyprint
	padding: 20px !important;
	border: 0 !important;
	border-radius: 3px;

#auth0
	border: 1px  #ecf0f1 solid;
	padding: 10px;
	text-align: center
	border-radius: 3px;
	margin: 30px 0;
	overflow: hidden
