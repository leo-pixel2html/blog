

/*==========  Blog Header  ==========*/

.blog-banner
  padding 140px 0
  margin-bottom 0


/*==========  Blog Post Tile  ==========*/
.posts
  background-color #f1f1f1
  padding 50px 0

/*==========  Blog Post Tile  ==========*/

tile-height = 500px
tile-width = 100%
tile-margin = 22px

categories = {
    blog: {
        color: #0081b7,
        position: 0
    },
    other: {
        color: #3bc5f6,
        position: 1
    },
    updates: {
        color: #00d7cc,
        position: 2
    },
    opensource: {
        color: #0081b7,
        position: 3
    },
    product: {
        color: #8144dc,
        position: 4
    },
    engineering: {
        color: #d35ea3,
        position: 5
    },
    customer-success: {
        color: #ea5452,
        position: 6
    },
    business: {
        color: #ffbc00,
        position: 7
    }
}

.post-tile

  height tile-height
  width tile-width
  background-color #ccc
  margin-left tile-margin
  margin-bottom tile-margin
  float left
  border-radius 3px
  overflow hidden
  position relative
  cursor pointer

  &:first-child
    margin-left 0

  
  // Add tile category classes
  for category, cat in categories
    &.{category}
      background-color: cat.color
      .category-icon
        background-position: center (-(cat.position * 600)px - 260px)


  // Tile styles

  &.highlight
  
    color white
  
    .post-text

      background-color transparent
      border 0

      h2, p, .category
        color white

      .auth0r
        span, .by
          color white

    // Add tile category classes
    for category, cat in categories
      &.{category}
        background-color: cat.color
        .category-icon
          background-position: center (-(cat.position * 600)px - 150px)


  &.custom
    .category-icon
        background-position center
        background-size cover


  .category-icon 
    width: tile-width
    height 200px
    margin: 0 auto;
    background-image url('../img/post-categories-sprite.png')
    background-repeat no-repeat
    background-size 600px auto

    .overlay
      display block
      height 200px
      background-color: rgba(0,0,0,0.3)

  .post-text

    background-color white
    overflow hidden
    height 300px
    position relative

    
    h2
      color black
      margin 5px 20px
      font-size 25px
      font-weight lighter
      line-height 1.2
      font-weight bold

    p
      margin 10px 20px
      font-size 14px
      max-height 94px
      overflow hidden

    .category
      display block
      margin 15px 20px
      margin-bottom 0
      font-size 12px
      font-weight bold
      color #5d676f

    .auth0r

      font-style italic
      font-size 12px
      overflow hidden
      width 250px 
      position absolute
      bottom 20px
      left 20px

      a
        color inherit
      
      img
        width: 40px
        height: 40px
        background-color black
        border-radius 400px
        float left

      span

        float left
        clear right
        margin-left 10px
        color gray

        &.by
          margin-top 4px
          color black



/*==========  Post overlay ==========*/

.post-overlay

  background-color: rgba(0,0,0,0.8)
  position fixed
  top 0
  width 100%
  height 100%
  z-index 1000
  display none
  overflow-y scroll

  .blog-post
    margin 50px 0
    min-height 400px
    width 100%
    background-color white
    border-radius 5px
    position relative
    overflow hidden

    .post-spinner
        position absolute
        top 50%
        left 50%
        margin-top -20px
        margin-left -20px

        animation spin 2s
        animation-iteration-count infinite
        -webkit-animation spin 2s
        -webkit-animation-iteration-count infinite

  .nav

    height 60px
    line-height 60px
    font-size 14px
    text-decoration none
    position relative

    .grid
      position absolute
      left 50%
      font-size 24px
      width 46px
      margin-top 3px
      margin-left -22px
      padding 0 10px

    a
      color black

      .icon
        font-size: 24px
        margin-top 2px

    .next, .prev
      height 60px
      max-width 45%
      overflow hidden

    .prev
      float left
      padding-left 20px

      .icon
        float left
        margin-right 10px

    .next
      float right
      padding-right 20px

      .icon
        float right
        margin-left 10px
  

  .post-header

    min-height 300px
    width 100%
    position relative
    overflow hidden

    .category-bg
      position absolute
      width 100%
      height 100%
      background-image url('../img/post-categories-sprite.png')
      background-repeat no-repeat
      background-size 800px auto
      opacity 0.2
      z-index 0

    .post-category
      font-size 15px
      font-weight bold
      text-align center
      z-index 100
      position relative

    h1
      font-size 50px
      margin 50px
      font-weight lighter
      text-align center
      position relative

    .auth0r

      font-size 14px
      overflow hidden
      width 250px 
      margin 40px auto
      text-align center

      a
        color inherit
      
      img
        width: 40px
        height: 40px
        background-color black
        border-radius 400px
        display block
        margin 10px auto

      span

        color #333
        width 100%
        display block

        &.by
          color black
          font-size 20px


    // Add tile category classes
    for category, cat in categories
      &.{category}
        background-color: cat.color
        .category-bg
          background-position: center (-(cat.position * 800)px - 220px)

  
  .post-featured-img
    width 100%
    height auto

  .post-body

    min-height 500px
    border-bottom 1px solid #ccc

    .post-content
      
      width 60%
      margin 50px auto

      img
        max-width 100%


  .post-comments

    background-color #f1f1f1
    width 100%
    overflow hidden

    .disqus-container

      width 600px
      margin 20px auto
      background-color white
      border 5px solid #dce4eb
      min-height 400px
      border-radius 10px
      padding 10px 20px



@media (max-width: 991px)

    .post-overlay

      .container

        padding 0

      .blog-post

        margin 0
        border-radius 0

        h1
          font-size 60px
          margin 20px

        .nav
          .text
            display none

        .post-body
          .post-content
            width 90%


      .post-comments

        display none



/*==========  Animations  ==========*/
@-webkit-keyframes spin {
    from {
        transform rotateY(0deg)
    }
    to {
        transform rotateY(359deg)
    }
}
@keyframes spin {
    from {
        transform rotateY(0deg)
    }
    to {
        transform rotateY(359deg)
    }
}
